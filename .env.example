# =================================================================
# PostPilot Environment Configuration
# =================================================================
# Copy this file to .env.local and fill in your actual values

# =================================================================
# AI Service API Keys
# =================================================================

# OpenAI API Key - For text generation and content optimization
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# ElevenLabs API Key - For voice generation and audio content
# Get your key from: https://elevenlabs.io/speech-synthesis
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Runway API Key - For AI video generation
# Get your key from: https://app.runwayml.com/
RUNWAY_API_KEY=your-runway-key-here

# Canva API Key - For automated design creation
# Get your key from: https://www.canva.com/developers/
CANVA_API_KEY=your-canva-key-here

# =================================================================
# Database Configuration
# =================================================================

# Database URL for Prisma
# Example: postgresql://username:password@localhost:5432/postpilot
# For local development, you can use SQLite: file:./dev.db
DATABASE_URL="file:./dev.db"

# =================================================================
# Authentication & Security
# =================================================================

# NextAuth Secret - Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth URL - Your application URL
NEXTAUTH_URL=http://localhost:3000

# =================================================================
# Social Media Platform APIs (Optional)
# =================================================================

# Facebook/Meta API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter/X API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Instagram API (Meta)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# =================================================================
# Third-Party Integrations (Optional)
# =================================================================

# Stripe for payments (if implementing subscription features)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Buffer API (for social media management)
BUFFER_CLIENT_ID=your-buffer-client-id
BUFFER_CLIENT_SECRET=your-buffer-client-secret

# =================================================================
# Email Service (Optional)
# =================================================================

# For sending notifications and reports
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =================================================================
# Development Settings
# =================================================================

# Environment mode
NODE_ENV=development

# Port for development server (optional)
PORT=3000

# =================================================================
# Analytics & Monitoring (Optional)
# =================================================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS=true
